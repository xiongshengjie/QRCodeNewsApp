<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/news_list_padding">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_title"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lines="2"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_news_title"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/news_another"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:lines="1"
            android:ellipsize="end"
            android:layout_marginBottom="@dimen/news_list_inner_padding"
            android:layout_marginTop="@dimen/news_list_inner_padding"
            android:gravity="center_vertical"
            android:textSize="@dimen/text_small"
            android:textColor="@color/black" />

    </LinearLayout>

    <ImageView
        android:id="@+id/news_pic"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/news_list_inner_padding"
        android:layout_weight="1" />

</LinearLayout>