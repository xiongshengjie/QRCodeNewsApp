<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/news_list_padding">

    <TextView
        android:id="@+id/news_title"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/news_list_inner_padding"
        android:layout_marginTop="@dimen/news_list_inner_padding"
        android:textColor="@color/black"
        android:textSize="@dimen/text_news_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/image_url_one"
            android:layout_width="0dp"
            android:layout_height="@dimen/news_list_three_height"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/image_url_two"
            android:layout_width="0dp"
            android:layout_height="@dimen/news_list_three_height"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/image_url_three"
            android:layout_width="0dp"
            android:layout_height="@dimen/news_list_three_height"
            android:layout_weight="1"/>


    </LinearLayout>

    <TextView
        android:id="@+id/news_another"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="@dimen/text_medium"
        android:lines="1"
        android:ellipsize="end"
        android:layout_marginBottom="@dimen/news_list_inner_padding"
        android:layout_marginTop="@dimen/news_list_inner_padding"
        android:textColor="@color/black" />

</LinearLayout>