<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="180dp"
    android:background="@drawable/default_background"
    android:orientation="horizontal"
    android:paddingBottom="50dp"
    android:padding="10dp">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/nav_head_image"
        android:layout_width="@dimen/person_center_head_size"
        android:layout_height="@dimen/person_center_head_size"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/person_center_head_padding_left"
        android:layout_marginRight="@dimen/person_center_head_padding_right"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_toRightOf="@+id/nav_head_image">

        <TextView
            android:id="@+id/tv_person_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|bottom"
            android:textColor="@color/white"
            android:textSize="@dimen/text_super" />

        <TextView
            android:id="@+id/tv_person_description"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|top"
            android:textColor="@color/white"
            android:textSize="@dimen/text_large" />

    </LinearLayout>





</RelativeLayout>